          %li
            %a{:href => "#."}
              %i.fa.fa-linkedin
          %li
            %a{:href => "#."}
              %i.fa.fa-dribbble
      -#/ Our Services
      -#.col-md-4
      -#  %h5 Our Services
      -#  %ul.links
      -#    %li
      -#      %a{:href => "#."} Wed Design
      -#    %li
      -#      %a{:href => "#."} Wed Development
      -#    %li
      -#      %a{:href => "#."} SEO Optimization
      -#/ useful links
      -#.col-md-4
      -#  %h5 useful links
      -#  %ul.links
      -#    %li
      -#      %a{:href => "#."} About us

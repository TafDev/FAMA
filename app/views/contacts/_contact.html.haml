= provide(:description, 'Contact Famaphotobooths for any enquiries')
= provide(:keywords, 'Contact us, photobooths, events, photobooth, affordable, occasion')
/ Contact
.contact#contact.style-3.padding-top-10.padding-bottom-80
  .container
    .heading-block.text-center.margin-bottom-80
      %h3 Get In Touch With Us
      %hr/
      %span.margin-top-20
        If you have any questions regarding any of our packages or want to make an enquiry please fill out the form and we will get back to you as fast as we can
        %strong or you can give us a call at +447500946019
    / Form
    .contact-right.padding-top-30.padding-left-30
      / Success Msg
      #contact_message.success-msg
        %i.fa.fa-paper-plane-o>
        Thank You. Your Message has been Submitted
      / FORM
      #contact_form.contact-form
        = form_for @contact do |f|
          = notice
          = @contact.errors.full_messages.join(', ')
          = f.hidden_field :nickname

          .col-md-12
            .col-sm-6
              %li
                = f.text_field :name, placeholder: "Full Name", class: "form-control", required: true
              %li
                = f.email_field :email, placeholder: "Email", class: "form-control", required: true
              %li
                = f.number_field :phone, placeholder: "Phone Number", class: "form-control"
              %li
                = f.date_field :date, class: "datepicker form-control", placeholder: "Pick a date"
            .col-sm-6
              %li
                .form-control
                  .input-field
                    = f.select :occasion, options_for_select(Contact::OCCASIONS), :include_blank => "Select Your Occasion"
              %li
                .form-control
                  .input-field
                    = f.select :subject, options_for_select(Contact::SUBJECTS), :include_blank => "Package Type", class: "form-control"
              %li
                = f.text_area :message, placeholder: "Message", class: "form-control", required: true
            %li.col-sm-12
              = f.submit "Send", class: "btn"

:javascript
  $(document).ready(function() {
    $('select').material_select();
    $('.caret').html('');
  });


  $('.datepicker').pickadate({
    selectMonths: true, // Creates a dropdown to control month
    selectYears: 15 // Creates a dropdown of 15 years to control year
  });
